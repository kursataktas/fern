  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "vitest",
        "--inspect-brk",
        "${file}",
        "--no-coverage"
      ],
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "timeout": 10000,
      "console": "integratedTerminal"
    }
  ]
}
